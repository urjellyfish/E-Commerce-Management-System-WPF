<Window x:Class="E_CommerceManagementSystem.Presentation.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:E_CommerceManagementSystem.Presentation"
        mc:Ignorable="d"
        Title="Login" Height="450" Width="800" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <Label Content="Login" HorizontalAlignment="Left" Margin="370,19,0,0" VerticalAlignment="Top" FontSize="30" FontWeight="ExtraBold"/>

        <Label Content="Email" HorizontalAlignment="Left" Margin="104,91,0,0" VerticalAlignment="Top" FontSize="18" FontWeight="Bold"/>
        <TextBox x:Name="EmailTextBox" HorizontalAlignment="Left" Margin="214,95,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="448" Foreground="Blue" FontSize="18" VerticalContentAlignment="Center"/>

        <Label Content="Password" HorizontalAlignment="Left" Margin="104,153,0,0" VerticalAlignment="Top" FontSize="18" FontWeight="Bold"/>
        <PasswordBox x:Name="PasswordBox" HorizontalAlignment="Left" Margin="214,157,0,0" VerticalAlignment="Top" Width="448" FontSize="18" VerticalContentAlignment="Center"/>

        <Button x:Name="LoginButton" Content="Login" HorizontalAlignment="Left" Margin="296,217,0,0" VerticalAlignment="Top" FontSize="18" FontWeight="Bold" Height="42" Width="241" Click="LoginButton_Click"/>
        <Button x:Name="RegisterButton" Content="Register" HorizontalAlignment="Left" Margin="296,278,0,0" VerticalAlignment="Top" FontSize="18" FontWeight="Bold" Height="42" Width="241" Click="RegisterButton_Click"/>
        <Button x:Name="ForgotButton" Content="Forgot Password" HorizontalAlignment="Left" Margin="296,339,0,0" VerticalAlignment="Top" FontSize="18" FontWeight="Bold" Height="42" Width="241"/>
    </Grid>
</Window>
